<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- added back button -->
        <LinearLayout
            android:id="@+id/back_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Back"
                android:src="@drawable/back_button_white" />
        </LinearLayout>

        <!-- Developer Profile Image -->
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <!-- Developer Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Escolano, Ben Joseph"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/title_holder"/>

        <!-- Developer Role -->
        <TextView
            android:id="@+id/text_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile App Developer"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Short Bio -->
        <TextView
            android:id="@+id/text_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passionate_about_creating_high_quality_mobile_applications_with_a_focus_on_user_experience_and_performance_always_learning_and_improving"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

        <!-- Contact Information -->
        <TextView
            android:id="@+id/text_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: bjve@example.com"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
/>



        <!-- Developer Profile Image -->
        <ImageView
            android:id="@+id/image_profile2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <!-- Developer Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Erojo, Richimir B."
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/title_holder"/>

        <!-- Developer Role -->
        <TextView
            android:id="@+id/text_role2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile App Developer"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Short Bio -->
        <TextView
            android:id="@+id/text_bio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/driven_by_curiosity_and_creativity_with_a_love_for_crafting_intuitive_user_interfaces_and_solving_real_world_problems_through_code_committed_to_growth_and_innovation"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>

        <!-- Contact Information -->
        <TextView
            android:id="@+id/text_contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: bjve@example.com"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
/>

    </LinearLayout>

</ScrollView>
