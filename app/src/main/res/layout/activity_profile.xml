<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- added back button -->
    <LinearLayout
        android:id="@+id/back_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Back"
            android:src="@drawable/back_button_white" />
    </LinearLayout>

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/pp_bg" />-->

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/pp_draft"/>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pp_sub_bg" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_icon" />


    <TextView
        android:id="@+id/textview_score"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="High-Score: "
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_marginTop="295dp"
        android:layout_marginStart="60dp"/>



    <TextView
        android:id="@+id/textView_leaderboardrank"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Rank: "
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_below="@id/textview_score"
        android:layout_marginStart="60dp"/>


    <TextView
        android:id="@+id/textview_username"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="John Smith"
        android:textColor="@color/white"
        android:textSize="46sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"/>

    <Button
        android:id="@+id/button_ranking"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:text="VIEW RANKINGS"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button_edit"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/forest_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_ranking"
        android:text="Edit Profile"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="20sp"/>



</RelativeLayout>