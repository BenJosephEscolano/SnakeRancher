<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_info" />

    <ImageView
        android:id="@+id/imageview_gamelogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/game_logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Snake Rancher"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/button_play"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:text="Play"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/forest_green"/>

    <Button
        android:id="@+id/button_leaderboard"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_play"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Rankings"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/deep_indigo"/>

    <Button
        android:id="@+id/button_settings"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_leaderboard"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Settings"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/deep_indigo"/>

    <Button
        android:id="@+id/button_exit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_settings"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Exit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/dark_red"/>

</RelativeLayout>