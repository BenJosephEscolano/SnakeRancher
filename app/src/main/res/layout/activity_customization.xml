<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Snake Colors:"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/colorOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Head color options -->
        <LinearLayout
            android:id="@+id/colorHead"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/btnRedHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_red_light" />

            <Button
                android:id="@+id/btnGreenHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_orange_dark" />

            <Button
                android:id="@+id/btnBlueHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/btnBlackHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/black" />
            <!-- Add more colors here -->
        </LinearLayout>

        <!-- Body color options -->
        <LinearLayout
            android:id="@+id/colorBody"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/btnRedBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_red_light" />

            <Button
                android:id="@+id/btnGreenBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_orange_dark" />
            <Button
                android:id="@+id/btnBlueBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/btnBlackBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/black" />

            <!-- Add more colors here -->
        </LinearLayout>

        <!-- Tail color options -->
        <LinearLayout
            android:id="@+id/colorTail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tail"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/btnRedTail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_red_light" />

            <Button
                android:id="@+id/btnGreenTail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_orange_dark" />
            <Button
                android:id="@+id/btnBlueTail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/btnBlackTail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/black" />

            <!-- Add more colors here -->
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Preview"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/colorSnake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">



        <Button
            android:id="@+id/snakeHead"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light" />

        <Button
            android:id="@+id/snakeBody"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light" />
        <Button
            android:id="@+id/snakeTail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light" />


        <!-- Add more colors here -->
    </LinearLayout>


    <Button
        android:id="@+id/saveCustomization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save" />
</LinearLayout>
